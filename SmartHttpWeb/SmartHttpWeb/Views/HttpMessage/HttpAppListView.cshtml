@model List<SmartHttpEntity.HttpApp>
@{
    Layout = null;
}
<div class="tableinner">
    <table class="table table-striped table-bordered table-advance table-hover fixed_table">
        @if (Model.Count > 0)
        {

            <thead>
                <tr>
                    <th>名称</th>
                    <th>AppID</th>
                    <th>描述</th>
                    <th>操 作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td class="tac">@entity.Name</td>
                        <td class="tac">@entity.AppID</td>
                        <td class="tac">@entity.Description</td>
                        <td class="tac">
                            <a href="@Url.Action("UpdateHttpApp", "HttpMessage", new { id = entity.ID })" class="btn default btn-xs purple" target="_blank"><i class="icon-pencil"></i>编 辑</a>
                            <a href="@Url.Action("DownAppError", "HttpMessage", new { appID = entity.AppID })" class="btn default btn-xs purple" target="_blank"><i class="icon-pencil"></i>下载异常列表</a>
                            <button type="button" class="btn default btn-xs red" onclick="DeleteHttpApp('@entity.ID')">删 除</button>
                         </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td style="text-align: center">暂无数据....</td>
                </tr>
            </tbody>
        }
    </table>
</div>
@Html.Raw(ViewBag.pager)
